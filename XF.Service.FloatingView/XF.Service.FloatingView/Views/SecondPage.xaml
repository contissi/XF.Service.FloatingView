<?xml version="1.0" encoding="UTF-8"?>
<base:BaseGradientContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:base="clr-namespace:XF.Service.FloatingView.Views"
                              xmlns:prism="http://prismlibrary.com"
                              x:Class="XF.Service.FloatingView.Views.SecondPage"
                              GradientStartColor="{StaticResource FVBlue}"
                              GradientEndColor="{StaticResource FVGreen}"
                              Title="{Binding Title}">

    <base:BaseGradientContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" IconImageSource="ic_action_close.png" Command="{prism:GoBack}" />
    </base:BaseGradientContentPage.ToolbarItems>

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Label Text="You are on Page 2!" FontSize="Medium" TextColor="White" />
    </StackLayout>
    
</base:BaseGradientContentPage>